{% extends 'base.html.twig' %}

{% block title %}Les minéraux{% endblock %}

{% block body %}
    <div class="jumbotron mt-4">
        <h1>Minéraux</h1>
    </div>
    <div class="container">
        <h2>Minéralogie Brute</h2>
        <div class="row flex">
            {% for mineral in mineraux %}
            <div class="col-3">
                <div class="card">
                    <div class="card-body">
                    <a href="{{ path ('blog_show', {id:mineral.id, slug: mineral.slug}) }}"><h5 class="card-title btn btn-outline-primary" style="width: 100%; height: 50px;">{{mineral.title}}</h5></a>
                        <p class="card-text">{{mineral.pays}} <br> {{mineral.continent}}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
